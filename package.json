{
  "name": "dim",
  "productName": "DeusInMachina",
  "//software version - semver system": "<major version>.<minor version>.<patch version>+<db scheme version>",
  "version": "0.1.1+1",
  "description": "DIM - Deus In Machina",
  "main": "dim.js",
  "scripts": {
    "postinstall": "patch-package && electron-builder install-app-deps",
    "dim": "electron .",
    "windows": "electron-builder --windows",
    "linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ulkuehn/Deus-In-Machina"
  },
  "author": {
    "name": "Ulrich Kuehn",
    "email": "qgit@gmx.net"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ulkuehn/Deus-In-Machina/issues"
  },
  "homepage": "http://ulkuehn.github.io/dim",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@popperjs/core": "^2.11.8",
    "better-sqlite3-multiple-ciphers": "^11.8.0",
    "bootstrap": "^5.3.3",
    "datatables.net-dt": "^2.2.1",
    "daterangepicker": "^3.1.0",
    "docx": "^9.3.0",
    "electron-log": "^5.2.4",
    "html-to-text": "^9.0.5",
    "jquery": "^3.7.1",
    "jquery-contextmenu": "^2.9.2",
    "jstree": "^3.3.17",
    "leaflet": "^1.9.4",
    "leaflet-image": "^0.4.0",
    "nodehun": "^3.0.2",
    "quill": "^1.3.7",
    "roddeh-i18n": "^1.2.1",
    "rtf-parser": "^1.3.3",
    "spectrum-colorpicker": "^1.8.1",
    "split.js": "^1.6.5",
    "table": "^6.9.0",
    "uuid": "^11.0.5",
    "wordcloud": "^1.2.3"
  },
  "devDependencies": {
    "electron": "^32.3.0",
    "electron-builder": "^26.0.0",
    "electron-rebuild": "^3.2.9",
    "patch-package": "^8.0.0",
    "prettier": "^3.4.2"
  },
  "build": {
    "appId": "DeusInMachina",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!.editorconfig",
      "!**/._*",
      "!dist",
      "!patches",
      "!.favorites.json",
      "!.gitignore",
      "!.prettierrc",
      "!package.json",
      "!package-lock.json"
    ],
    "electronLanguages": [
      "de",
      "en-US"
    ],
    "fileAssociations": {
      "ext": "dim"
    },
    "win": {
      "icon": "./icons/dim.png"
    },
    "nsis": {
      "perMachine": true,
      "runAfterFinish": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons",
      "category": "Office"
    }
  }
}